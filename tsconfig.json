{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "newLine": "lf",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "paths": {
      "doc-editor-core": ["./packages/core/src"],
      "doc-editor-delta": ["./packages/delta/src"],
      "doc-editor-plugin": ["./packages/plugin/src"],
      "doc-editor-utils": ["./packages/utils/src"],
      "doc-editor-core/dist/*": ["./packages/core/src/*"],
      "doc-editor-delta/dist/*": ["./packages/delta/src/*"],
      "doc-editor-plugin/dist/*": ["./packages/plugin/src/*"],
      "doc-editor-utils/dist/*": ["./packages/utils/src/*"]
    },
  },
  "include": [
    "packages/*/src"
  ]
}